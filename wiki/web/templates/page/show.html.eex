<h1><%=@page.title %></h1>

<div><%= raw @page.body %></div>

<div class="form-group">
  <%= link "Return", to: "/" %>
  <br>
  <%= link "Edit", to: page_path(@conn, :edit, @page.title) %>
  <br>
<%= link "Delete", to: page_path(@conn, :delete, @page.title), method: :delete, class: "btn btn-danger" %>
</div>
